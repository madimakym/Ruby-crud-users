        <div class="container text-header">
          <h1 class="titre">All users</h1>
        </div>
        <div class="container content">
        <p id="notice"><%= notice %></p>
          <div class="row">
            <div class="col-md-6">
              <div class="blc-button">
                <a href='users/new' class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Add new user </a>
              </div>
            </div>
            <div class="col-md-6">
            </div>
          </div>

          <div class="row">
              <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th class="align-center action">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @users.each do |user| %>
                      <tr>
                          <td><%= user.name %></td>
                          <td><%= user.email %> </td>
                          <td><%= user.phone %> </td>
                          <td> 
                            <%= link_to 'Show', user, :class => "btn btn-primary btn-sm" %> <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-primary btn-sm" %> <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-sm" %>
                          </td>                         
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
        </div>

